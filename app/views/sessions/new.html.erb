<div class="container" role="main">
<%= form_tag('/signin', method: :post) do %>

    <div class="form-group">
    <%= label_tag(:name, "Your name:") %>
    <%= collection_select(:user, :name, User.all, :name, :name, prompt: "Please selecr your username from this dropdown") %>
    </div>

    <div class="form-group">
    <%= label_tag(:password, "Your password:") %>
    <%= password_field_tag(:password) %>
    </div>

    <div class="actions">
    <%= submit_tag("Sign In") %>
    </div>

<% end %>
</div>
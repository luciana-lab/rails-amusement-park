<p id="notice"><%= notice %></p>

<% if flash[:message] %>
    <div class="center alert">
        <p><%= flash[:message] %></p>
    </div>
<% end %>

<div class="container" role="main">
<div class="center">
<div class="info">
    <% if @user.admin %>
        <strong>ADMIN</strong><br>
    <% end %>
    <strong>Name:</strong> <%= @user.name %><br>
    <strong>Tickets:</strong> <%= @user.tickets %><br>
    <strong>Mood:</strong> <%= @user.mood %><br>
    <strong>Height:</strong> <%= @user.height %><br>
    <%= link_to "See attractions", attractions_path %>
</div>
</div>
</div>